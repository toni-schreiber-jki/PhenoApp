<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme.  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- the theme applied to the application or activity -->
    <!-- <style name="PositionSpinner" parent="@android:style/Widget.Holo.Light.Spinner"> -->
    <style name="JKI_Spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_height">@dimen/top_line_element_size</item>
    </style>

    <style name="JKI_Spinner_Main" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_height">@dimen/main_tabelle_row_big_height</item>
    </style>

    <style name="JKI.Spinner.Position.Top.TextAppearance" parent="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/darkred</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/top_line_text_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JKI.Spinner.TextAppearance" parent="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem" >
        <item name="android:textColor">@color/jki_braun</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/top_line_text_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JKI_Eigenschaft_Title">
        <item name="android:layout_width">@dimen/main_tabelle_label_column_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/main_textsize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#33FFFFFF</item>
        <item name="android:textColor">@color/jki_blau</item>
    </style>

    <style name="JKI_Eigenschaft_Value">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/jki_braun</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_textsize</item>
    </style>

    <style name="JKI_KeyValueRow">
        <item name="android:layout_height">@dimen/main_tabelle_row_height</item>
    </style>

    <style name="JKI_KeyValueRow_Gross">
        <item name="android:layout_height">@dimen/main_tabelle_row_big_height</item>
    </style>

    <style name="JKI_KeyValueRow_Gross_elements">
        <item name="android:layout_height">@dimen/main_tabelle_row_big_height</item>
        <item name="android:layout_width">@dimen/main_tabelle_row_big_height</item>
        <item name="android:textSize">@dimen/main_textsize</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="JKI_Button_Main_Text">
        <item name="android:height">@dimen/main_button_height</item>
        <item name="android:minHeight">@dimen/main_tabelle_row_big_height</item>
        <item name="android:textSize">@dimen/main_textsize</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>



</resources>