<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\uf013"
            android:id="@+id/tvSettingsIcon"
            android:textSize="150dp"
            android:textColor="#46b8da"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Einstellungen"
                android:id="@+id/textView22"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/tvFolderIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf07c"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Speicherort:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <EditText
                    android:id="@+id/etSpeicherOrt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/main_textsize" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvZickZackIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf0ec"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="&quot;Zick Zack Modus&quot;:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbZickTack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height"
                    android:focusableInTouchMode="false">

                    <requestFocus></requestFocus>
                </CheckBox>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvFirstEmptyIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf120"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="&quot;First Empty Button&quot;:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbFirstEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Akzession:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbAkzession"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Passport:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbPassport"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Sorte /Zuchtstamm:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbSorte"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvElternIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf182\uf183"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Eltern:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbEltern"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Sortimentsnummer:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbSortNr"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tvCalendar"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf1c3\uf073"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Excelausgabe mit Datum:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbExcelDatum"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="420dp"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="BBCH Frage"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbBbch"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeftHand"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="\uf0a5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Linkshändler"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/main_textsize" />

                <CheckBox
                    android:id="@+id/cbLeftHand"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_tabelle_row_height"
                    android:checked="false" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>