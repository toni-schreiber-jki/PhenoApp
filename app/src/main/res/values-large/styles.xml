<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="JKI.Spinner.Position.Top.TextAppearance" parent="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/darkred</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JKI_Eigenschaft_Title">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#33FFFFFF</item>
        <item name="android:textColor">@color/jki_blau</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="JKI_Eigenschaft_Value">
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/jki_braun</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JKI_KeyValueRow">
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="JKI_KeyValueRow_Gross">
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="JKI_Spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="JKI.Spinner.TextAppearance" parent="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem" >
        <item name="android:textColor">@color/jki_braun</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JKI_KeyValueRow_Gross_elements">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">38dp</item>
        <item name="android:textSize">17dp</item>
    </style>

</resources>